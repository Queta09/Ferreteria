<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="250.0" prefWidth="350.0" spacing="20.0"
      xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.171"
      fx:controller="org.example.f.controles.DescuentoController"> <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>

    <Label text="Aplicar Descuento a la Venta" style="-fx-font-size: 16pt; -fx-font-weight: bold;" />

    <VBox spacing="5.0">
        <Label text="Seleccione Descuento o Promoción:" />
        <ChoiceBox fx:id="descuentoChoiceBox" prefWidth="1.7976931348623157E308" />
        <Label fx:id="descripcionLabel" text="Descripción: Descuento no seleccionado." style="-fx-font-style: italic;" />
    </VBox>

    <VBox spacing="10.0">
        <Button fx:id="aplicarButton" text="Aplicar Descuento" onAction="#handleAplicarDescuento"
                prefWidth="1.7976931348623157E308" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;"/>
        <Button text="Remover Descuento" onAction="#handleRemoverDescuento"
                prefWidth="1.7976931348623157E308"/>
        <Button text="Cancelar" onAction="#handleCancelar"
                prefWidth="1.7976931348623157E308" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
    </VBox>

</VBox>
