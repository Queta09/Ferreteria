<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.f.controles.MainSystemController"
            fx:id="mainBorderPane"  prefHeight="700" prefWidth="1000">


    <top>
        <VBox style="-fx-background-color: #2196F3; -fx-padding: 10;">
            <Label text="FERRETERÍA FF - PANEL PRINCIPAL"
                   style="-fx-font-size: 24pt; -fx-text-fill: white; -fx-font-weight: bold;"/>
            <Label fx:id="usuarioLabel" text="Bienvenido, [Nombre de Usuario]"
                   style="-fx-font-size: 14pt; -fx-text-fill: white;"/>
        </VBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #E0E0E0;">
            <Label text="Módulos" style="-fx-font-size: 16pt; -fx-font-weight: bold;"/>

            <Button fx:id="inventarioButton" text="1. Inventario" prefWidth="150" />
            <Button fx:id="ventasButton" text="2. Ventas" prefWidth="150" />
            <Button fx:id="reportesButton" text="3. Reportes" prefWidth="150" />
            <Button fx:id="proveedoresButton" text="4. Proveedores" prefWidth="150" />
        </VBox>
    </left>

    <center>
        <VBox alignment="CENTER" spacing="20">
            <Label text="¡Selecciona un módulo para comenzar la gestión!"
                   style="-fx-font-size: 18pt; -fx-text-fill: #555;"/>
        </VBox>
    </center>
</BorderPane>